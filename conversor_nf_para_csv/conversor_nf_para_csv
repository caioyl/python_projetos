']\n","    endereço = infos_nf['dest']['enderDest']\n","    bairro = endereço['xBairro']\n","    rua = endereço['xLgr']\n","    numero = endereço['nro']\n","    if 'xCpl' in endereço:\n","      complemento = endereço['xCpl']\n","    else:\n","      complemento = 'Não informado'\n","    if 'vol' in infos_nf['transp']:\n","      pesoB = infos_nf['transp']['vol']['pesoB']\n","    else:\n","      pesoB = 'Não informado'\n","    print('\\n')\n","    valores.append([numero_nota, empresa_emissora, nome_cliente,bairro, rua, numero, complemento, pesoB])\n","\n","for arquivo in lista_arquivos:\n","  pegar_infos(arquivo,valores)\n","\n","tabela = pd.DataFrame(columns=colunas,data=valores)\n","tabela.to_excel('NotasFiscais.xlsx',index=False)"],"metadata":{"id":"xD9CdUJ1k30D","executionInfo":{"status":"ok","timestamp":1692020052476,"user_tz":180,"elapsed":2174,"user":{"displayName":"Caio Yamamoto Lellis","userId":"06208066817815584805"}},"outputId":"f60346c1-24c1-4e09-f683-1329e66b6a17","colab":{"base_uri":"https://localhost:8080/"}},"execution_count":3,"outputs":[{"output_type":"stream","name":"stdout","text":["\n","\n","\n","\n","\n","\n"]}]}]}